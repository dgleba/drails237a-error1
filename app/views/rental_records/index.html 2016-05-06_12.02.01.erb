<div class="page-header">
  <%= link_to new_rental_record_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Rental record
  <% end %>
  <h1>Listing rental_records</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
       <!-- disable destroy.. 
         <th></th>
        -->
            <th>Customer</th>
            <th>Vehicle</th>
            <th>Start date</th>
            <th>End date</th>
          </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @rental_records) do |rental_record| %>
        <td><%= link_to 'Show', rental_record %></td>
        <td><%= link_to 'Edit', edit_rental_record_path(rental_record) %></td>
        <!-- disable destroy.. 
        <td><%= link_to 'Destroy', rental_record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        -->
            <td><%= rental_record.customer %></td>
            <td><%= rental_record.vehicle %></td>
            <td><%= rental_record.start_date %></td>
            <td><%= rental_record.end_date %></td>
          <% end %>
    </tbody>
  </table>
</div>
